{
  "name": "visual-whiteboard-server",
  "version": "1.0.0",
  "description": "Node.js + Express backend for visual requirements whiteboard",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
    "test:kb": "tsx --test src/services/__tests__/KBService.compose.test.ts",
    "test:cards": "tsx --test src/services/cards/__tests__/cardComposer.compose.test.ts",
    "seed:prd-templates": "tsx src/scripts/seed-prd-templates.ts",
    "seed:prd-templates:reset": "tsx src/scripts/seed-prd-templates.ts --reset",
    "generate:embeddings": "tsx src/scripts/generate-embeddings.ts",
    "convert:templates": "tsx src/scripts/convert-md-templates.ts",
    "ingest:prd-sources": "tsx src/scripts/ingest-prd-sources.ts",
    "kb:validate": "tsx src/scripts/validate-kb.ts",
    "kb:smoke": "tsx src/scripts/smoke-compose.ts"
  },
  "dependencies": {
    "@types/compression": "^1.8.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "openai": "^4.26.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
